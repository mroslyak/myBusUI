<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:gravity="left"
    android:orientation="vertical" >
 
    <TextView
        android:id="@+id/fromConstantDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="@string/from"
        android:textColor="#000000"
        android:textStyle="bold" />
      
    <TextView
        android:id="@+id/fromStopIdDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_toRightOf="@id/fromConstantDetail"
        android:text="FromStopValDetail"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/toConstantDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromStopIdDetail"
        android:layout_margin="1dp"
        android:text="@string/to"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/toStopIdDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fromStopIdDetail"
        android:layout_margin="1dp"
        android:layout_toRightOf="@id/toConstantDetail"
        android:text="ToStopValDetail"
        android:textColor="#000000" />

    
    <TableLayout
        android:id="@+id/routeTableEstimates"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toConstantDetail" 
        >
        
        
    </TableLayout>
    </RelativeLayout>